@inject NavigationManager NavigationManager

<div class="col border-top py-3">
    <img class="img-fluid" src="@Image" alt="@Title">
    <h4 class="mt-3">@Title</h4>
    <p>$@Price per day</p>
    <div class="row row-cols-2 gx-5 px-4 px-xxl-5 mx-xxl-5">
        <button class="col btn btn-primary">Rent</button>
        <button class="col btn btn-outline-primary" @onclick="SeeInformationCar">More Info.</button>
    </div>
</div>

@code {
    [Parameter]
    public string Title { get; set; }
    
    [Parameter]
    public double Price { get; set; }
    
    [Parameter]
    public string Image { get; set; }
    
    [Parameter]
    public string License { get; set; }
    
    private void SeeInformationCar()
    {
        NavigationManager.NavigateTo("/Vehicle/" + License);
    }
}